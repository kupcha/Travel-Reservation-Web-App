<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>G13 Travel Agency</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- LOGIN SERVLET CONFIG -->
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.cs336.pkg.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Create Account Servlet Config -->
  <servlet>
  	<servlet-name>create_account</servlet-name>
  	<servlet-class>com.cs336.pkg.CreateAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>create_account</servlet-name>
  	<url-pattern>/create-account</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet Config -->
  <servlet>
  	<servlet-name>logout</servlet-name>
  	<servlet-class>com.cs336.pkg.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <!-- confirmPurchase Servet Config -->
  <servlet>
  	<servlet-name>purchase</servlet-name>
  	<servlet-class>com.cs336.pkg.SubmitPurchase</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>purchase</servlet-name>
  	<url-pattern>/purchase</url-pattern>
  </servlet-mapping>
  
</web-app> 
